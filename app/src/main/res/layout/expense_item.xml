<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="expenseAndPayer"
            type="com.example.groupexpenseapp.db.entity.ExpenseAndPayer" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        android:orientation="vertical"
        android:padding="@dimen/std_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expense_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="3"
                android:text="@{expenseAndPayer.expense.description}"
                android:textAppearance="?attr/textAppearanceHeadline5"
                tools:text="Bilety" />

            <TextView
                android:id="@+id/expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="@{@string/money_format(expenseAndPayer.expense.amount)}"
                android:textAlignment="textEnd"
                android:textAppearance="?attr/textAppearanceHeadline5"
                tools:text="2222,22 zł" />
        </LinearLayout>

        <TextView
            android:id="@+id/payer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/payer_paid(expenseAndPayer.payer.name)}"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textAlignment="textEnd"
            tools:text="Zapłacone przez: Janek"/>

        <TextView
            android:id="@+id/date_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/date_added(expenseAndPayer.expense.date)}"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textAlignment="textEnd"
            tools:text="Dodano: 25.12.2019"/>


    </LinearLayout>


</layout>