<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/groupListFragment">

    <fragment
        android:id="@+id/groupListFragment"
        android:name="com.example.groupexpenseapp.ui.fragment.GroupListFragment"
        android:label="GroupListFragment"
        tools:layout="@layout/group_list_fragment">
        <action
            android:id="@+id/action_groupListFragment_to_groupFragment"
            app:destination="@id/groupFragment"/>
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.example.groupexpenseapp.ui.fragment.GroupDetailsFragment"
        android:label="group_fragment"
        tools:layout="@layout/group_details_fragment" >
        <argument
            android:name="groupId"
            app:argType="long" />
        <action
            android:id="@+id/action_groupFragment_to_expenseDetailsFragment"
            app:destination="@id/expenseDetailsFragment" />
        <action
            android:id="@+id/action_groupFragment_to_personDetailsFragment"
            app:destination="@id/personDetailsFragment" />
        <action
            android:id="@+id/action_groupFragment_to_addExpenseFragment"
            app:destination="@id/addExpenseFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/expense_details_fragment"
        android:id="@+id/expenseDetailsFragment"
        android:name="com.example.groupexpenseapp.ui.fragment.ExpenseDetailsFragment"
        android:label="ExpenseDetailsFragment" >
        <argument
            android:name="expenseId"
            app:argType="long" />
        <action
            android:id="@+id/action_expenseDetailsFragment_to_addExpenseFragment"
            app:destination="@id/addExpenseFragment" />
    </fragment>
    <fragment
        android:id="@+id/personDetailsFragment"
        android:name="com.example.groupexpenseapp.ui.fragment.PersonDetailsFragment"
        android:label="PersonDetailsFragment" />
    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.example.groupexpenseapp.ui.fragment.AddExpenseFragment"
        android:label="AddExpenseFragment" >
        <argument
            android:name="groupId"
            app:argType="long" />
        <argument
            android:name="expenseId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
</navigation>